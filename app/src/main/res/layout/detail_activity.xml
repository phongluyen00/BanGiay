<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.retrofitrxjava.model.EBook" />
    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@id/title_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        thumb="@{item.image}"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_alignParentEnd="true"
                        android:background="#B0939393"
                        android:scaleType="centerCrop" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/rectangle13" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="#00f"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#00f"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_share_24" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/read"
                        android:layout_toStartOf="@id/share"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="#00f"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_book_online_24" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/favorite"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_toStartOf="@id/read"
                        android:backgroundTint="#00f"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/comment"
                        android:layout_toStartOf="@id/favorite"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="#00f"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_baseline_comment_24" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="231dp"
                        android:layout_marginTop="60dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:gravity="center" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img"
                        thumb="@{item.image}"
                        android:layout_width="160dp"
                        android:layout_height="231dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="80dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image23"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img"
                        android:layout_marginStart="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="@{item.title}"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="@{item.author}"
                        android:textSize="14sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/view_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_author"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rounded_border_edittext_login"
                        android:backgroundTint="#2D00BCD4">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_baseline_grade_24"
                            android:drawablePadding="4dp"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="@{item.vote}"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/tv_rating"
                            app:layout_constraintStart_toStartOf="@id/tv_rating"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry"
                            tools:text="4.5" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="@{item.total_page}"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/tv_page"
                            app:layout_constraintStart_toStartOf="@id/tv_page"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="18dp"
                            android:text="Eng"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@id/tv_language"
                            app:layout_constraintStart_toStartOf="@id/tv_language"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_rating"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="Rating"
                            app:layout_constraintEnd_toStartOf="@id/tv_page"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rate"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_page"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="Pages"
                            app:layout_constraintEnd_toStartOf="@id/tv_language"
                            app:layout_constraintStart_toEndOf="@id/tv_rating"
                            app:layout_constraintTop_toTopOf="@id/tv_rating"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_language"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="14dp"
                            android:text="Language"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv_page"
                            app:layout_constraintTop_toTopOf="@id/tv_rating"
                            tools:ignore="RtlSymmetry" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/des"
                        textHtml="@{item.description}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_detail"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title_similar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/des"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Similar stories"
                        android:textColor="@android:color/black" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcl_similar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_similar"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_trending_books" />

                </RelativeLayout>
            </ScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Price"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/price"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price"
                price="@{item.price}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/payment"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/payment" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_border_edittext_login"
                android:backgroundTint="#4C485F"
                android:drawableStart="@drawable/debit_card"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingTop="14dp"
                android:paddingEnd="15dp"
                android:paddingBottom="14dp"
                android:text="Buy"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>