<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.retrofitrxjava.Product" />

        <variable
            name="listener"
            type="com.example.retrofitrxjava.ItemDeleteCartListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_recruitment"
            thumb="@{item.image}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@{item.name}"
            app:layout_constraintEnd_toEndOf="@id/tv_price"
            app:layout_constraintEnd_toStartOf="@id/tv_price"
            app:layout_constraintLeft_toRightOf="@id/img_recruitment"
            app:layout_constraintRight_toLeftOf="@id/img_delete"
            app:layout_constraintStart_toEndOf="@id/img_recruitment"
            app:layout_constraintTop_toTopOf="@id/img_recruitment"
            tools:text="Ã¢sassassssssssss" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_price"
            price="@{item.price}"
            tools:text="$10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/img_recruitment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_recruitment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:text='@{"" +item.count}'
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/img_add"
            app:layout_constraintEnd_toStartOf="@id/img_add"
            app:layout_constraintLeft_toRightOf="@id/tv_price"
            app:layout_constraintStart_toEndOf="@id/img_delete"
            app:layout_constraintTop_toTopOf="@id/img_add"
            tools:text='30' />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:onClick="@{()->listener.onItemDeleteClick(item)}"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@id/img_recruitment"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:srcCompat="@drawable/ic__delete" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:onClick="@{()->listener.onItemDeleteClick(item)}"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="@id/img_delete"
            app:layout_constraintStart_toEndOf="@id/tv_count"
            app:srcCompat="@drawable/ic__add" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>