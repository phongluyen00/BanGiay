<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.retrofitrxjava.model.ProductCategories" />

        <variable
            name="listener"
            type="com.example.retrofitrxjava.ItemFavoriteListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round"
        android:translationZ="3dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->listener.onClickProduct(item)}"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_recruitment"
                thumb="@{item.image}"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:minHeight="150dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:singleLine="true"
                android:text="@{item.title}"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/done"
                app:layout_constraintEnd_toStartOf="@+id/favorite"
                app:layout_constraintStart_toEndOf="@id/img_recruitment"
                tools:text="1212121121212" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_border_edittext_login"
                android:drawableEnd="@drawable/ic_baseline_done_24"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:layout_marginBottom="3dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:singleLine="true"
                android:text="Yêu thích"
                android:textColor="#4CAD73"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/img_recruitment"
                app:layout_constraintStart_toEndOf="@id/img_recruitment" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/dialog_bg"
                android:backgroundTint="#22D3D3D5"
                android:ellipsize="end"
                android:onClick="@{()-> listener.onClickRemove(item)}"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/done"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>